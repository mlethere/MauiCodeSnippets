<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiCodeSnippets.ApiClientExample.ApiClientExamplePage"
             xmlns:viewModel="clr-namespace:MauiCodeSnippets.ApiClientExample"
             x:DataType="viewModel:ApiClientExampleViewModel"
             Title="ApiClientExamplePage">
    
    <VerticalStackLayout>
        <Label 
            Text="API Example"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

        <Button Text="Get Data" Command="{Binding GetDataCommand}" />

        <Label Text="{Binding ApiOutput}" />

    </VerticalStackLayout>
</ContentPage>