<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiCodeSnippets.Views.BirthdayPage"
             xmlns:vm="clr-namespace:MauiCodeSnippets.ViewModels"
             Title="BirthdayPage"
             >

    <!--The Movie Database example from Microsoft has the list of movies as a property in the MainAPp ... did not know you could do this 
        but I don't want that. I am therefore loading it in the code as it wouldn't work here, and I could a compiler error -->
    <!--<ContentPage.BindingContext>
        <vm:BirthdayListViewModel />
    </ContentPage.BindingContext>-->

    <ListView ItemsSource="{Binding BirthdayList}" Margin="10">
        <ListView.ItemTemplate>
            <DataTemplate>
                <TextCell Text="{Binding Name}" x:DataType="vm:BirthdayViewModel">
                    <TextCell.ContextActions>
                        <MenuItem Text="Edit" Clicked="OnEditClicked" />
                        <MenuItem Text="Delete" Clicked="OnDeleteClicked" />
                    </TextCell.ContextActions>
                </TextCell>
            </DataTemplate>
        </ListView.ItemTemplate>
    </ListView>
</ContentPage>