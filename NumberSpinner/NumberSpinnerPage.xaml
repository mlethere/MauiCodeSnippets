<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiCodeSnippets.NumberSpinner.NumberSpinnerPage"
             Title="NumberSpinnerPage">
    <VerticalStackLayout>
        <Label Text="Adjust the Number" />
        <Label x:Name="NumberLabel" FontSize="24" HorizontalOptions="Center" />
        <Stepper 
            x:Name="NumberStepper"
            Minimum="0"
            Maximum="100"
            Increment="1"
            Value="0" />
    </VerticalStackLayout>
</ContentPage>